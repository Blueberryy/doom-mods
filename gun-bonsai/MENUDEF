  Title "$TFLV_MENU_LD_NEW_EFFECT_TITLE"
}

OptionMenu "GunBonsaiStatusDisplay"
{
  class TFLV_Menu_StatusDisplay
  Title "$TFLV_MENU_STATUS_TITLE"
}
